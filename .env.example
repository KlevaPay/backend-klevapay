# KlevaPay Backend Environment Configuration
# Copy this file to .env and update the values

# Server Configuration
NODE_ENV=development
PORT=4000
BASE_URL=http://localhost:4000

# Database Configuration
MONGO_URI=mongodb://localhost:27017/klevapay
# Alternative: MongoDB Atlas connection string
# MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/klevapay?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-refresh-token-secret-change-this-in-production
JWT_EXPIRE=7d
JWT_REFRESH_EXPIRE=30d

# Email Configuration (for OTP and notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Email Templates
FROM_EMAIL=noreply@klevapay.com
FROM_NAME=KlevaPay

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf

# Security Configuration
BCRYPT_SALT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Logging Configuration
LOG_LEVEL=debug
LOG_FILE=true

# API Keys (for external services)
PAYSTACK_SECRET_KEY=sk_test_your_paystack_secret_key
FLUTTERWAVE_SECRET_KEY=FLWSECK_TEST-your_flutterwave_secret_key

# Frontend URLs (for CORS)
FRONTEND_URL=http://localhost:3000
DASHBOARD_URL=http://localhost:3001

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret-key

# Redis Configuration (optional, for caching and sessions)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=